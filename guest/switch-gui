#!/bin/sh

TEXTDOMAIN=vlaunch-guest

start_gnome() {
	echo "start-gnome"
	sed "s?PREFERRED=[^$]*?PREFERRED=/usr/bin/gnome-session?" -i /etc/sysconfig/desktop
}

start_bloom() {
	echo "start-bloom"
	sed "s?PREFERRED=[^$]*?PREFERRED=/usr/bin/startbloom?" -i /etc/sysconfig/desktop
}

set_gui() {
	case "$1" in
		gnome)
			start_gnome
			;;
		bloom)
			start_bloom
			;;
	esac
}

set_gui `vbox-get-property /UFO/GUI`

